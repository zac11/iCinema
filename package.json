{
  "name": "cinema-project",
  "version": "1.0.0",
  "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server.js",
    "client": "node start-client.js",
    "clean-reports": "rm -rf cypress/reports",
    "test-ff": "npx cypress run --browser firefox",
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run --spec cypress/integration/cinema/*.js",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/mochawesome*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test": "npm run scripts || npm run posttest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamil-nawrot/iCinema.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kamil-nawrot/iCinema/issues"
  },
  "homepage": "https://github.com/kamil-nawrot/iCinema#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cypress": "^4.4.0",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "mocha": "^7.1.1",
    "mochawesome": "^6.1.0",
    "mochawesome-merge": "^4.0.3",
    "mongoose": "^5.5.6",
    "react-numeric-input": "^2.2.3",
    "react-redux-form": "^1.16.13",
    "redux-form": "^8.1.0",
    "wait-on": "^4.0.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cypress-multi-reporters": "^1.2.4",
    "eslint": "^5.16.0",
    "mochawesome-report-generator": "^5.1.0"
  }
}
